{
  "compilerOptions": {
    // Enable latest features
    "lib": [
      "ES2015"
    ],
    "target": "ES2015",
    "module": "ES2015",
    // Bundler mode
    "moduleResolution": "node",
    "noEmit": true,
    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    // Some stricter flags (disabled by default)
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noPropertyAccessFromIndexSignature": true,
    // More optimizations
    "removeComments": true
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}
